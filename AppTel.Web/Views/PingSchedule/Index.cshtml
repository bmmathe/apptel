@model AppTel.Web.Models.PingScheduleViewModel
@{
    ViewBag.Title = "Ping Schedule";
}
@section scripts{
    <script>
        $(document).ready(function() {
            $("#ScheduleTable > tbody > tr > td > a[data-type='pause']").on("click", function () {
                console.log($(this).data("job"));
            });            
        });
    </script>
}
<h2>Ping Schedule</h2>
@Html.ActionLink("Create Job", "Create", "PingSchedule", null, new {@class="btn btn-primary"})

<table id="ScheduleTable" class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                Application Name
            </th> 
            <th>
                Endpoint
            </th>
            <th>
                Interval (in seconds)
            </th>
            <th>
                
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var job in Model.Jobs)
        {
            <tr>
                <td>
                    @job.ApplicationName
                </td>
                <td>
                    @job.Endpoint
                </td>
                <td>
                    @job.RepeatIntervalInSeconds.ToString()
                </td>
                <td>
                    <a href="#" class="btn btn-sm btn-primary" data-type="pause" data-job="@job.JobName">Pause</a>
                </td>
            </tr>
        }
    </tbody>
</table>